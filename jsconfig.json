  "compilerOptions": {
    "module": "ES6",
    "moduleResolution": "Node",
    "target": "ES2020",
    "jsx": "preserve",
    "allowImportingTsExtensions": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "checkJs": false
