<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
      <div class="form-container p-4 shadow rounded">
        <h1>Create a maintenance ticket for <%= @house.name %></h1>
        <%= simple_form_for([@house, @maintenance]) do |f| %>
          <div class="form-container">
            <%= f.input :title, label: "Title", required: true %>
            <%= f.input :description, label: "Description", required: true %>
            <%= f.input :photos, as: :file, input_html: { multiple: true } %>
          </div>
          <div class="d-flex justify-content-between">
            <div>
              <%= link_to "Cancel", house_path(@house), class: "btn btn-secondary" %>
            </div>
            <div>
              <%= f.submit "Create Maintenance Ticket", class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
