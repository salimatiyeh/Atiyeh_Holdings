<div class="container">
  <div class="row">
    <div class="col-12 col-lg-8">
      <!-- Content on the left side (takes up 9 columns on large screens) -->
      <div class="card rounded shadow">
        <%= cl_image_tag @house.photo.key, height: 300, width: 400, crop: :fill %>
        <h2><%= @house.name %></h2>
        <p><%= @house.address %></p>
        <p><%= @house.square_feet %></p>
        <p><%= @house.number_of_rooms %></p>
        <div class="button-container mt-3 mb-2">
          <%= link_to "Edit", edit_house_path(@house), class: "btn btn-primary" %>
          <%= link_to "Home", root_path, class: "btn btn-secondary" %>
          <%= link_to "Delete", house_path(@house), class: "btn btn-danger", data: {turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
        </div>
      </div>
    </div>
    <div class="col-12 col-lg-4">
      <!-- Map on the right side (takes up 3 columns on large screens) -->
      <div class="card rounded shadow"
          id="mapbox" style="width: 100%; height: 600px;"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>

