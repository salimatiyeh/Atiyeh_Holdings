<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
      <div class="form-container p-4 shadow rounded">
        <%= simple_form_for @house do |f| %>
          <div class="form-container">
            <%= f.input :name, label: "Name", required: true %>

            <%= f.input :square_feet, class: "form-control", label: "Square Feet", required: true %>

            <%= f.input :address, input: "Address", required: true %>
            <%= f.input :rental_amount, class: "form-control", required: true %>
            <%= f.input :number_of_rooms, class: "form-control", required: true %>
            <%= f.input :number_of_bathrooms, label: "Bathrooms", class: "form-control", required: true %>
            <div class="row">
              <%= f.label :has_garage, class: "form-check-label" %>
              <%= f.check_box :has_garage, class: "form-check-input", label: "Garage?" %>

              <%= f.label :has_storm_shelter, class: "form-check-label" %>
              <%= f.check_box :has_storm_shelter, class: "form-check-input" %>

              <%= f.label :has_gas, class: "form-check-label" %>
              <%= f.check_box :has_gas, class: "form-check-input", label: "Has gas" %>

              <%= f.label :is_occupied, class: "form-check-label" %>
              <%= f.check_box :is_occupied, class: "form-check-input" %>
            </div>
            <%= f.input :photos, as: :file, class: "mb-4", input_html: { multiple: true }, required: true %>
          </div>
          <div class="d-flex justify-content-between">
            <div>
              <%= link_to "Cancel", root_path, class: "btn btn-secondary" %>
            </div>
            <div>
              <%= f.submit "Submit", class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
