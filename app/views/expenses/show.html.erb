<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
      <div class="form-container p-4 shadow rounded">
      <div>
        <h4><%= @expense.title %></h4>
      </div>
      <div>
        <p><%= @expense.description %></p>
      </div>
      <div>
        <p>$<%= @expense.amount %></p>
      </div>
      <div>
        <p><%= @expense.category %></p>
      </div>
      <div>
        <p><%= @expense.created_at.strftime('%B %e, %Y %I:%M%p') %></p>
      </div>
      <div>
        <%= cl_image_tag @expense.document.key, height: 300, width: 400, crop: :fill %>
      </div>
    </div>
  </div>
</div>
